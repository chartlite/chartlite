{
  "name": "@chartlite/react",
  "version": "0.1.0",
  "description": "React wrapper for chartlite",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["charts", "react", "visualization", "chartlite"],
  "author": "Riel St. Amand",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chartlite/chartlite.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/chartlite/chartlite/issues"
  },
  "homepage": "https://github.com/chartlite/chartlite#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@chartlite/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}