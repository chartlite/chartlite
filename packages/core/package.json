{
  "name": "@chartlite/core",
  "version": "0.2.1",
  "description": "Core charting library - framework agnostic",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "vitest bench --run",
    "perf": "tsx scripts/benchmark.ts",
    "perf:sampling": "tsx scripts/benchmark-with-sampling.ts",
    "audit:colors": "tsx scripts/audit-colors.ts",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "charts",
    "graphs",
    "svg",
    "visualization",
    "lightweight",
    "performance"
  ],
  "author": "Riel St. Amand",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chartlite/chartlite.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/chartlite/chartlite/issues"
  },
  "homepage": "https://github.com/chartlite/chartlite#readme",
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.4",
    "jsdom": "^25.0.1",
    "tsup": "^8.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.5.0",
    "vitest": "^4.0.4"
  }
}
